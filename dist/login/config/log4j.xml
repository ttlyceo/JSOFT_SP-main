<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "../../game/data/xsd/dtd/log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">
	<appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
		<param name="Threshold" value="INFO" />
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.EnhancedPatternLayout">
			<param name="ConversionPattern" value="[%p][%d{HH:mm:ss}] - %m%n" />
		</layout>
	</appender>
	<appender name="WARN" class="org.apache.log4j.RollingFileAppender">
		<param name="Threshold" value="WARN" />
		<param name="Encoding" value="UTF-8" />
		<param name="File" value="log/warnings.log" />
		<param name="Append" value="true" />
		<layout class="org.apache.log4j.EnhancedPatternLayout">
			<param name="ConversionPattern" value="[%d{dd.MM.yy HH:mm:ss}] %p:%m%n" />
		</layout>
	</appender>
	<appender name="ERROR" class="org.apache.log4j.RollingFileAppender">
		<param name="Threshold" value="ERROR" />
		<param name="Encoding" value="UTF-8" />
		<param name="File" value="log/errors.log" />
		<param name="Append" value="true" />
		<layout class="org.apache.log4j.EnhancedPatternLayout">
			<param name="ConversionPattern" value="[%d{dd.MM.yy HH:mm:ss}] %p:%m%n" />
		</layout>
	</appender>
	<appender name="FILE" class="org.apache.log4j.RollingFileAppender">
		<param name="Threshold" value="INFO" />
		<param name="Encoding" value="UTF-8" />
		<param name="File" value="log/java.log" />
		<param name="Append" value="false" />
		<layout class="org.apache.log4j.EnhancedPatternLayout">
			<param name="ConversionPattern" value="[%d{dd.MM.yy HH:mm:ss}] %c{1}: %m%n" />
		</layout>
	</appender>
	<appender name="FILEASYNC" class="org.apache.log4j.AsyncAppender">
		<param name="Blocking" value="false" />
		<param name="BufferSize" value="512" />
		<appender-ref ref="FILE" />
	</appender>
	<logger name="file" additivity="false">
		<appender-ref ref="FILEASYNC" />
	</logger>
	<logger name="org.hibernate">
		<level value="WARN" />
	</logger>
	<root>
		<level value="info" />
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="FILE" />
		<appender-ref ref="WARN" />
		<appender-ref ref="ERROR" />
	</root>
</log4j:configuration>